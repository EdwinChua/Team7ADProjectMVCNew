@model Team7ADProjectMVC.Requisition
@{
    Page.Title = "View Requisition Details";
    Layout = "~/_Layout1.cshtml";
    Employee currentEmployee = (Employee)Session["User"];
    Page.Employee = currentEmployee;
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h3>
                    Department:  @Html.DisplayFor(model => model.Employee.Department.DepartmentName)

                </h3>
                <h3>
                    Employee:  @Html.DisplayFor(model => model.Employee.EmployeeName)

                </h3>
                <h3>
                    Requisition Date:  @*@Html.DisplayFor(model => model.OrderedDate)*@

                    @Convert.ToDateTime(Model.OrderedDate).ToString("dd/MM/yyyy")
                </h3>
            </div>
            
            <h3>
                Item List:
            </h3>
            <div class="col-md-8">
                <table class="table">
                    <thead>

                        <tr>
                            <th>
                                Item
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Outstanding Quantity
                            </th>
                           
                        </tr>


                    </thead>
                    <tbody>

                        @foreach (var item in @ViewBag.rel)
                        {
                            <tr>
                                <td>
                                    @item.Inventory.Description
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.OutstandingQuantity
                                </td>
                                

                            </tr>
                        }

                    </tbody>


                </table>


                @*</div>*@



