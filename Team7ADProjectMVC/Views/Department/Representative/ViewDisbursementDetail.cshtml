@model IEnumerable<Team7ADProjectMVC.DisbursementDetail>

@{
    ViewBag.Title = "ViewDisbursementDetail";
    Layout = "~/_Layout1.cshtml";
    Page.Title = "Disbursement List for " + @ViewBag.DisbursementList.Department.DepartmentName;
}

<h3>Collection Point: @ViewBag.Cpname (@ViewBag.Cptime)</h3>


<div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveredQuantity)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventory.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveredQuantity)
                </td>
            </tr>
        }

    </table>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @if (@ViewBag.status != "Complete")
            {
                <div class="col-md-offset-4 col-md-8">
                    <div class="form-actions no-color">
                        <input type="submit" value="Confirm" class="btn btn-default" />

                    </div>
                </div>
            }

        </div>
    }

    <br />
    <br />
    <h4>@Html.ActionLink("Back to List", null, null, null, new { href = Request.UrlReferrer })</h4>

</div>