@model IEnumerable<Team7ADProjectMVC.AdjustmentDetail>
@{
    ViewBag.Title = "View Detail";
    Layout = "~/_Layout1.cshtml";
    Page.title = "Adjustment Details";
    Employee currentEmployee = (Employee)Session["User"];
    Page.Employee = currentEmployee;
}
<h3>Adjustment Status: @ViewBag.status</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        @Html.DisplayNameFor(model => model.Adjustment.AdjustmentId)
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>

        </tr>
    }
</table>
<h3>Total Sum: <u>$ @ViewBag.sum </u></h3>
<hr />
<div class="row">
    <div class="col-md-7"></div><div class="col-md-5 text-right">
        @if (currentEmployee.Role.Name == "Store Supervisor" && @ViewBag.status == "Pending Approval")
        {
            if (@ViewBag.sum < 250)
            {
                <button class="btn btn-success" type="button" onclick="window.location.href='/Adjustments/SupervisorApprove/@ViewBag.Adjid' ">Approve</button>
                <button class="btn btn-danger" type="button" onclick="return confirm('Are you sure?') ,window.location.href='/Adjustments/SupervisorRejecct/@ViewBag.Adjid'">Reject</button>


            }
            else
            {

                <button class="btn btn-danger" type="button" onclick="window.location.href='/Adjustments/SupervisorPending/@ViewBag.Adjid'">Forward To Manager</button>


            }
        }
        @if (currentEmployee.Role.Name == "Store Manager" && @ViewBag.status == "Pending Final Approval")
        {
            <button class="btn btn-success" type="button" onclick="window.location.href='/Adjustments/ManagerApprove/@ViewBag.Adjid'">Approve</button>
            <button class="btn btn-danger" type="button" onclick="window.location.href='/Adjustments/ManagerRejecct/@ViewBag.Adjid'">Reject</button>


        }
        <button class="btn btn-default" type="button" onclick="window.history.back()">Back</button>
    </div>

</div>
<script>
    $(document).ready(function () {
        document.getElementById("menu8").className += "active";
    });
</script>